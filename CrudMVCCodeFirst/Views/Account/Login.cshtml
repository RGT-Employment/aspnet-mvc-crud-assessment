
@model CrudMVCCodeFirst.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <br />
    <br />
    <br />
    <div>
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName)
        @*@Html.ValidationMessageFor(m=>m.UserName, "", new { @class = "error-message" })*@
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
        @*@Html.ValidationMessageFor(m=>m.Password, "", new { @class = "error-message" })*@
    </div>
    <button class="btn btn-default" type="submit">Login</button>
    <label>admin & password (Just a demo account and password)</label>
    <div>
        @Html.ValidationSummary(true, "", new { @class = "mark" })
    </div>
}